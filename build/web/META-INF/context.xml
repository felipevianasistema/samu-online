<?xml version="1.0" encoding="UTF-8"?>
<Context antiJARLocking="true" path="/SamuOnline">
    
    <!-- Configuração do pool de conexões no TomCat -->
    <Resource name="jdbc/SamuOnlinePool"
              auth="Container"
              type="javax.sql.DataSource"
              removeAbandonedTimeout="60"
              removeAbandoned="true"
              logAbandoned="true"
              username="postgres"
              password="admin"
              driverClassName="org.postgresql.Driver"
              url="jdbc:postgresql://localhost:5432/db_samu_online" />    
</Context>
